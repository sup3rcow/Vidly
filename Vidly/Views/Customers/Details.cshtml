@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
}



@if (Object.ReferenceEquals(Model, null))
{
    <h4>Bad request.</h4>
}
else
{
    <h2>@Model.Name</h2>
    <ul>
        <li>Membership Type: @Model.MembershipType.Name</li>
        @if (Model.Birthdate.HasValue)
        {
            <li>Birthdate: @Html.Label(string.Format("{0:dd MMM yyyy}", Model.Birthdate))</li>
            <li>Birthdate: @Model.Birthdate.Value.ToShortDateString()</li>
        }
    </ul>
}